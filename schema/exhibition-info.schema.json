{
  "$defs": {
    "Exhibition": {
      "additionalProperties": false,
      "description": "A collection of objects that are displayed together in a museum or other public space.",
      "required": [
        "@type",
        "@id"
      ],
      "properties": {
        "@type": {
          "const": "http://ontologies.slub-dresden.de/exhibiton#Exhibition",
          "type": "string"
        },
        "@id": {
          "title": "http://ontologies.slub-dresden.de/exhibiton/entity#",
          "type": "string"
        },
        "artist": {
          "description": "The artists in the exhibition.",
          "items": {
            "$ref": "#/$defs/Person"
          },
          "type": "array"
        },
        "involvedPerson": {
          "description": "The persons involved in the exhibition.",
          "items": {
            "type": "object",
            "properties": {
              "person": {
                "$ref": "#/$defs/Person"
              },
              "role": {
                "description": "The role of the person in the exhibition.",
                "oneOf": [
                  {
                    "title": "Organisator",
                    "const": "http://ontologies.slub-dresden.de/exhibiton#Organizer"
                  },
                  {
                    "title": "Sponsor",
                    "const": "http://ontologies.slub-dresden.de/exhibiton#Sponsor"
                  },
                  {
                    "title": "Besucher :)",
                    "const": "http://ontologies.slub-dresden.de/exhibiton#Visitor"
                  }
                ]
              }
            }
          },
          "type": "array"
        },
        "category": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "curator": {
          "description": "The curator of the exhibition.",
          "items": {
            "$ref": "#/$defs/Person"
          },
          "type": "array"
        },
        "description": {
          "description": "A description of the exhibition.",
          "type": "string",
          "format": "markdown"
        },
        "end_date": {
          "$ref": "#/$defs/TemporalValue",
          "description": "The date the exhibition ends."
        },
        "location": {
          "description": "The location of the exhibition.",
          "items": {
            "$ref": "#/$defs/Location"
          },
          "type": "array"
        },
        "meta": {
          "items": {
            "$ref": "#/$defs/Meta"
          },
          "type": "array"
        },
        "object": {
          "description": "The objects in the exhibition.",
          "items": {
            "$ref": "#/$defs/Object"
          },
          "type": "array"
        },
        "organization": {
          "$ref": "#/$defs/Organization"
        },
        "organizer": {
          "description": "The organizer of the exhibition.",
          "items": {
            "$ref": "#/$defs/Person"
          },
          "type": "array"
        },
        "originaltitle": {
          "description": "The original title of the exhibition.",
          "type": "string"
        },
        "partOfSeries": {
          "$ref": "#/$defs/Series"
        },
        "source": {
          "description": "The sources that are used to create the entity.",
          "items": {
            "$ref": "#/$defs/Source"
          },
          "type": "array"
        },
        "start_date": {
          "$ref": "#/$defs/TemporalValue",
          "description": "The date the exhibition starts."
        },
        "subtitle": {
          "description": "The subtitle of the exhibition.",
          "type": "string"
        },
        "title": {
          "description": "The title of the exhibition.",
          "type": "string"
        }
      },
      "title": "Exhibition",
      "type": "object"
    },
    "Location": {
      "additionalProperties": false,
      "description": "",
      "properties": {
        "@type": {
          "const": "http://ontologies.slub-dresden.de/exhibiton#Location"
        },
        "@id": {
          "title": "http://ontologies.slub-dresden.de/exhibiton/entity#",
          "type": "string"
        },
        "description": {
          "description": "A description of the thing.",
          "type": "string"
        },
        "geo": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "parent": {
          "$ref": "#/$defs/Location"
        }
      },
      "required": [
        "name"
      ],
      "title": "Location",
      "type": "object"
    },
    "Meta": {
      "additionalProperties": false,
      "description": "Metadata.",
      "properties": {
        "created": {
          "format": "date-time",
          "type": "string"
        },
        "createdBy": {
          "type": "string"
        },
        "updated": {
          "format": "date-time",
          "type": "string"
        },
        "updatedBy": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "title": "Meta",
      "type": "object"
    },
    "Object": {
      "additionalProperties": false,
      "description": "A physical object that is part of an exhibition.",
      "properties": {
        "@type": {
          "const": "http://ontologies.slub-dresden.de/exhibiton#Object"
        },
        "@id": {
          "title": "http://ontologies.slub-dresden.de/exhibiton/entity#",
          "type": "string"
        },
        "creator": {
          "$ref": "#/$defs/Person",
          "description": "author of a Work or Object"
        },
        "description": {
          "description": "A description of the thing.",
          "type": "string"
        },
        "meta": {
          "items": {
            "$ref": "#/$defs/Meta"
          },
          "type": "array"
        },
        "name": {
          "type": "string"
        },
        "source": {
          "description": "The sources that are used to create the entity.",
          "items": {
            "$ref": "#/$defs/Source"
          },
          "type": "array"
        }
      },
      "required": [
        "name"
      ],
      "title": "Object",
      "type": "object"
    },
    "Organization": {
      "additionalProperties": false,
      "description": "An organization.",
      "properties": {
        "description": {
          "description": "A description of the thing.",
          "type": "string"
        },
        "meta": {
          "items": {
            "$ref": "#/$defs/Meta"
          },
          "type": "array"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "title": "Organization",
      "type": "object"
    },
    "Person": {
      "additionalProperties": false,
      "description": "A person.",
      "properties": {
        "@type": {
          "const": "http://ontologies.slub-dresden.de/exhibiton#Person",
          "type": "string"
        },
        "@id": {
          "title": "http://ontologies.slub-dresden.de/exhibiton/entity#",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string",
          "description": "Name der Person"
        },
        "birth_date": {
          "format": "date",
          "type": "string",
          "title": "Geburtsdatum"
        },
        "death_date": {
          "format": "date",
          "type": "string",
          "title": "Sterbedatum"
        },
        "description": {
          "description": "Anmerkungen zur Person",
          "type": "string",
          "format": "markdown"
        },
        "placeofwork": {
          "title": "Wirkungsorte",
          "description": "Wirkungsorte der Person",
          "items": {
            "$ref": "#/$defs/Location"
          },
          "type": "array"
        },
        "meta": {
          "items": {
            "$ref": "#/$defs/Meta"
          },
          "type": "array"
        },
        "sameAs": {
          "anyOf": [
            {
              "$ref": "#/$defs/WikidataHuman"
            },
            {
              "$ref": "#/$defs/GNDPerson"
            }
          ]
        }
      },
      "required": [
        "name"
      ],
      "title": "Person",
      "type": "object"
    },
    "Series": {
      "additionalProperties": false,
      "description": "A reoccurring event",
      "properties": {
        "@type": {
          "const": "http://ontologies.slub-dresden.de/exhibiton#Series"
        },
        "@id": {
          "title": "http://ontologies.slub-dresden.de/exhibiton/entity#",
          "type": "string"
        },
        "category": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "description": {
          "description": "A description of the thing.",
          "type": "string"
        },
        "meta": {
          "items": {
            "$ref": "#/$defs/Meta"
          },
          "type": "array"
        },
        "name": {
          "type": "string"
        },
        "source": {
          "description": "The sources that are used to create the entity.",
          "items": {
            "$ref": "#/$defs/Source"
          },
          "type": "array"
        }
      },
      "required": [
        "name"
      ],
      "title": "Series",
      "type": "object"
    },
    "WikidataHuman": {
      "title": "within Wikidata",
      "additionalProperties": true,
      "properties": {
        "@id": {
          "format": "wikidata-Q5",
          "type": "string"
        }
      }
    },
    "GNDPerson": {
      "title": "within GND",
      "additionalProperties": true,
      "properties": {
        "@id": {
          "format": "gndo-DifferentiatedPerson",
          "type": "string"
        }
      }
    },
    "Source": {
      "additionalProperties": false,
      "description": "A source of information.",
      "properties": {
        "description": {
          "description": "A description of the thing.",
          "type": "string"
        },
        "meta": {
          "items": {
            "$ref": "#/$defs/Meta"
          },
          "type": "array"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "title": "Source",
      "type": "object"
    },
    "TemporalValue": {
      "additionalProperties": false,
      "description": "",
      "properties": {
        "date": {
          "pattern": "[+-]?\\d{4}-\\d{2}-\\d{2}",
          "label": "Datum",
          "type": "string"
        },
        "modifier": {
          "type": "string",
          "label": "Modifizierung",
          "oneOf": [
            {
              "const": "BEFORE",
              "title": "Vor"
            },
            {
              "const": "AFTER",
              "title": "Nach"
            },
            {
              "const": "VAGUE",
              "title": "Um"
            }
          ]
        }
      },
      "title": "TemporalValue",
      "type": "object"
    }
  },
  "$id": "http://ontologies.slub-dresden.de/exhibtion",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "metamodel_version": "1.7.0",
  "title": "exhibtion-info",
  "type": "object",
  "version": null
}
